{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "develop"
  ],
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 2,
  "timezone": "Europe/Berlin",
  "schedule": [
    "after 5am every weekday",
    "before 1pm every weekday"
  ],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
